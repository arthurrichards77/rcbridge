<launch>

  <!-- compulsory args: must supply the IP address, the TF for the drone and the TF for the target -->
  <arg name="rcbridge_ip" />
  <arg name="drone_frame" />
  <arg name="target_frame" />

  <!-- optional args: can turn on PID tuning -->
  <arg name="tuning" default="False" />

  <node name="quadrcbridge" pkg="rcbridge" type="quadrcbridge.py">
    <rosparam param="failsafe">[0.5, 0.5, 0.0, 0.0, 0.5, 0.5, 0.5, 0.5]</rosparam>
    <param name="ipaddr" value="$(arg rcbridge_ip)" />
  </node>

  <param name="ctrl_drone_frame" type="string" value="$(arg drone_frame)" />
  <param name="targ_drone_frame" type="string" value="$(arg target_frame)" />

  <node pkg="brl_drones" name="control" type="drone_tf_follow.py" >

      <param name="pitch/init_gains/kp" type="double" value="0.2" />
      <param name="pitch/init_gains/ki" type="double" value="0.02" />
      <param name="pitch/init_gains/kd" type="double" value="0.2" />
      <param name="pitch/init_limits/upper" type="double" value="0.4" />
      <param name="pitch/init_limits/lower" type="double" value="-0.4" />

      <!-- RC transmitter sign convention requires negative gain on the roll channel -->
      <param name="roll/init_gains/kp" type="double" value="-0.2" />
      <param name="roll/init_gains/ki" type="double" value="-0.02" />
      <param name="roll/init_gains/kd" type="double" value="-0.2" />
      <param name="roll/init_limits/upper" type="double" value="0.4" />
      <param name="roll/init_limits/lower" type="double" value="-0.4" />

      <!-- RC transmitter sign convention requires negative gain on the yaw channel -->
      <param name="yaw/init_gains/kp" type="double" value="-0.8" />
      <param name="yaw/init_gains/ki" type="double" value="0.0" />
      <param name="yaw/init_gains/kd" type="double" value="0.0" />
      <param name="yaw/init_limits/upper" type="double" value="0.4" />
      <param name="yaw/init_limits/lower" type="double" value="-0.4" />

      <param name="height/init_gains/kp" type="double" value="0.2" />
      <param name="height/init_gains/ki" type="double" value="0.03" />
      <param name="height/init_gains/kd" type="double" value="0.2" />
      <param name="height/init_limits/upper" type="double" value="0.7" />
      <param name="height/init_limits/lower" type="double" value="-0.9" />
      
      <remap from="ctrl_vel" to="rcctrl" />
  </node>

  <node pkg="brl_drones" if="$(arg tuning)" name="tuning" type="pid_tune_gui.py" ns="control/pitch" />
  <node pkg="brl_drones" if="$(arg tuning)" name="tuning" type="pid_tune_gui.py" ns="control/roll" />
  <node pkg="brl_drones" if="$(arg tuning)" name="tuning" type="pid_tune_gui.py" ns="control/yaw" />
  <node pkg="brl_drones" if="$(arg tuning)" name="tuning" type="pid_tune_gui.py" ns="control/height" />

</launch>
